#! /usr/bin/env python
'''
    需求:修改乌龟GUI的背景色

    1.初始化ROS节点
    2.设置参数
'''
import rospy

if __name__ == "__main__":

    # 1.初始化ROS节点
    rospy.init_node("change_bgColor_p")
    # 2.设置参数
    rospy.set_param("/turtlesim/background_r",100)
    rospy.set_param("/turtlesim/background_g",100)
    rospy.set_param("/turtlesim/background_b",100)